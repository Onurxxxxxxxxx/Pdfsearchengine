<body>
    <h1>EKitap PDF Arama Sitesi</h1>
    <form id="searchForm" onsubmit="return handleSearch()">
        <input type="text" id="searchQuery" placeholder="Aramak istediğiniz PDF veya E-kitap..." required />
        <button type="submit">Ara</button>
    </form>

    <div class="buttons">
        <a id="ekitapSite" class="button-link" target="_blank" href="#">
            <button>Yönlendir: EKitap.site</button>
        </a>
        <a id="pdfdriveSite" class="button-link" target="_blank" href="#">
            <button>Yönlendir: Pdfdrive</button>
        </a>
        <a id="mirazSite" class="button-link" target="_blank" href="#">
            <button>Yönlendir: Mir.az</button>
        </a>
    </div>

    <script>
        function handleSearch() {
            const query = encodeURIComponent(document.getElementById('searchQuery').value.trim());
            if (!query) return false;

            // URL'leri belirleme
            const ekitapUrl = \`https://ekitap.site/?s=\${query}\`;
            const pdfdriveUrl = \`https://www.pdfdrive.com/search?q=\${query}\`;
            const mirazUrl = \`https://mir.az/search?query=\${query}\`;

            // Yönlendirme
            // Kullanıcının seçim yapmasını sağlayan butonlar veya dropdown ekleyebilirsiniz.

            // Burada örnek olarak ilk siteye yönlendiriyoruz
            window.open(ekitapUrl, '_blank');

            return false; // Formun submit olmasını engeller
        }

        // Butonlara tıklandığında farklı sitelere yönlendirme
        document.getElementById('ekitapSite').onclick = () => {
            const query = encodeURIComponent(document.getElementById('searchQuery').value.trim());
            const url = \`https://ekitap.site/?s=\${query}\`;
            window.open(url, '_blank');
        };
        document.getElementById('pdfdriveSite').onclick = () => {
            const query = encodeURIComponent(document.getElementById('searchQuery').value.trim());
            const url = \`https://www.pdfdrive.com/search?q=\${query}\`;
            window.open(url, '_blank');
        };
        document.getElementById('mirazSite').onclick = () => {
            const query = encodeURIComponent(document.getElementById('searchQuery').value.trim());
            const url = \`https://mir.az/search?query=\${query}\`;
            window.open(url, '_blank');
        };
    </script>
</body>
